.container{
    display: flex;
    flex: 1;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.motto{
    display: flex;
    flex-direction: column;
    margin-bottom: 100rpx;
    width: 100%;
    align-items: center;
    justify-content: center;
}
.motto-title{
    font-size: 24pt;
}
.motto-welcome{
    margin-left: 200rpx;
}
.flex-row{
    display: flex;
    flex-direction: row;
    background-color: white;
    height: 100rpx;
    width: 100%;
    text-align: center;
    padding-left: 120rpx;
    align-items: center;
}
.flex-row image{
    width: 90rpx;
    height: 90rpx;
}
.flex-row input{
    width: auto;
    text-align: left;
    margin-left: 10rpx;
}
.flex-row-divider{
    height: 65rpx;
    width: 3rpx;
    background-color: #d3d3d3;
    margin-left: 10rpx;
    margin-right: 10rpx;
}
.container button{
    width: 100%;
    margin-top: 100rpx;

}

.register{
    width: 100%;
    text-align: right;
    padding-right: 50rpx;
    margin-top: 20rpx;
    font-size: 16px;
    text-decoration:underline;
    color: blue;
    height: 55rpx
}